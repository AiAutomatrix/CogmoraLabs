
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- STRIPE EXTENSION RULES ---
    // Allow an authenticated user to read/write their own customer data
    // and all associated subcollections.
    match /customers/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read-only access to products and prices, so the client can display them.
    match /products/{productId} {
      allow read: if true;
      match /prices/{priceId} {
        allow read: if true;
      }
    }

    // --- COGMORA APP-SPECIFIC RULES ---
    // Allow a user full read/write access to all other documents and subcollections
    // under their own user profile document in the 'users' collection.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
