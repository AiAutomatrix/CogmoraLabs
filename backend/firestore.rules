
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- STRIPE EXTENSION RULES (Corrected) ---
    // This rule allows a user to read/write their own customer document and all subcollections
    // (like checkout_sessions) because the document ID `{uid}` is the user's auth UID.
    match /customers/{uid}/{document=**} {
      allow read, write: if request.auth.uid == uid;
    }
    
    // Public read access for products, which is safe and standard practice.
    match /products/{id}/{document=**} {
      allow read: if true;
    }

    // --- COGMORA APP-SPECIFIC RULES (This rule is correct and remains) ---
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
