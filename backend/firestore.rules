
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- STRIPE EXTENSION RULE ---
    // Allows a user to read and write to their own customer document and ANY subcollection
    // (like checkout_sessions) by matching the authenticated UID to the document ID.
    // This is the definitive fix for the onSnapshot permission error.
    match /customers/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- COGMORA APP-SPECIFIC RULE (This rule is correct and remains) ---
    // Allows a user to read/write their own user-specific data.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
