
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for user-specific data (allow full access to owner)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for creating the user document itself
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- STRIPE EXTENSION RULES ---

    // Rule for checkout sessions inside a user's document
    // This allows the authenticated user to create the session doc, and the Stripe
    // extension's backend service to write the URL/error back to it.
    match /users/{userId}/checkout_sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public rules for Stripe products and prices, as per extension documentation.
    // This is the fix for the "Failed to fetch price ID" permission error.
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Only backend can write

      match /prices/{priceId} {
        allow read: if true;
        allow write: if false; // Only backend can write
      }
    }
  }
}
