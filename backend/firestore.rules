rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow a user to read/write to their own user document and subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // This rule allows the Stripe extension to access the checkout_sessions
    // created by the user. The user can create docs, and both user and extension can update/read.
    match /users/{userId}/checkout_sessions/{id} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read their own subscription and payment info, which the extension writes.
    match /users/{userId}/subscriptions/{id} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/payments/{id} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for products and prices, but no client writes
    match /products/{id} {
      allow read: if true;
      allow write: if false;

      match /prices/{id} {
        allow read: if true;
        allow write: if false;
      }

      match /tax_rates/{id} {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}
