
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- STRIPE EXTENSION RULES ---
    // This is the key change. We can't match on {userId} because the document ID
    // is the Stripe Customer ID (e.g., cus_...). Instead, we must read the
    // customer document and check the `uid` field inside it.
    match /customers/{userId} {
      allow read, write: if get(/databases/$(database)/documents/customers/$(userId)).data.uid == request.auth.uid;
    }

    match /customers/{userId}/{document=**} {
      allow read, write: if get(/databases/$(database)/documents/customers/$(userId)).data.uid == request.auth.uid;
    }
    
    // Public read access for products, which is safe.
    match /products/{productId}/{document=**} {
      allow read: if true;
    }

    // --- COGMORA APP-SPECIFIC RULES (This rule is correct and remains) ---
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
