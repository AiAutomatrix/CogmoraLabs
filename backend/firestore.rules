rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow a user to create their own user document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow a user to read their own main document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow a user to create their own checkout session, and allow the Stripe
      // extension to write back the URL. This is the key fix.
      match /checkout_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Secure all other subcollections (like paperTradingContext)
      match /{subcollection}/{docId} {
        // This rule applies to paths like /paperTradingContext/{main}
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Make products and prices public, as required by the Stripe extension.
    match /products/{productId} {
      allow read: if true;
      allow write: if false;

      match /prices/{priceId} {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}
