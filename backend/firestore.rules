
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- STRIPE EXTENSION RULES (Required for checkout) ---
    // Allow an authenticated user to create their own customer object and read it.
    match /customers/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;

      // Allow user to create checkout sessions and read/write to them.
      // The Stripe extension's backend service also writes to this document.
      match /checkout_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow user to read their own payment and subscription info.
      match /subscriptions/{subscriptionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
      match /payments/{paymentId} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow public read-only access to products and prices, so the client can display them.
    match /products/{productId} {
      allow read: if true;
      match /prices/{priceId} {
        allow read: if true;
      }
    }

    // --- COGMORA APP-SPECIFIC RULES ---
    // Allow a user full read/write access to all documents and subcollections
    // under their own user profile document. This is the primary rule for the app.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
