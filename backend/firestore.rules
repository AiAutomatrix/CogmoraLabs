
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows a user to read and write to their own user document
    // and ANY document in ANY subcollection (like paperTradingContext) beneath it.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows a user to read and write to their own customer document
    // and ANY document in ANY subcollection (like checkout_sessions) beneath it.
    // This mirrors the working 'users' rule to fix the permission issue.
    match /customers/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
