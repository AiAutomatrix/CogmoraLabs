
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- STRIPE EXTENSION RULES ---

    // Products and prices can be publically readable.
    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }
    }

    // This is the definitive rule fix.
    // It allows a user to read and write to their own customer document AND any subcollection
    // (like checkout_sessions) beneath it. This grants the 'list' permission needed by the onSnapshot listener.
    match /customers/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- COGMORA APP-SPECIFIC RULES ---
    // This rule allows a user to read/write their own user-specific data.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
