
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- STRIPE EXTENSION RULE (DEFINITIVE FIX) ---
    // Allows an authenticated user to read and write to their own customer document
    // and ANY document in ANY subcollection (like checkout_sessions) beneath it.
    match /customers/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- COGMORA APP-SPECIFIC RULE (This rule is correct and remains) ---
    // Allows a user to read/write their own user-specific data.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
