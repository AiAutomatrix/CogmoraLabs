rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule 1: Allow users to create their own user document upon sign-up.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
    }

    // Rule 2: Allow a user to read, write, and list documents within their own user directory.
    // This recursive rule is the key that grants access to all subcollections like 
    // 'paperTradingContext', 'watchlist', 'openPositions', etc.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
